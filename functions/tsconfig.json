{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": []
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
